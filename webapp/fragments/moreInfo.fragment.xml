<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm title="Stella">
        <f:content>
            <Label text="{i18n>name}"></Label>
            <Text text="{PRODUCT_ID} - {NAME}"></Text>
            <Label text="{i18n>color}"></Label>
            <Text text="{DESCRIPTION}"></Text>
            <Label text="{i18n>price}"></Label>
            <Text text="{PRICE} {CURRENCY_CODE}"></Text>

            <Label text="Supplier Name"></Label>
            <Text text="{To_Supplier/COMPANY_NAME}"></Text>
            <Label text="Email ID"></Label>
            <Text text="{To_Supplier/EMAIL_ADDRESS}"></Text>
            <Label text="Country"></Label>
            <Text text="{To_Supplier/COUNTRY}"></Text>
        </f:content>
    </f:SimpleForm>
</core:FragmentDefinition>